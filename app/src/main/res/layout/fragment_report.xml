<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/titoloResoconto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="1dp"
                android:background="@drawable/bordo"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="31dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:text="RESOCONTO DALL'ATTIVAZIONE DELL'IMPIANTO"
                    android:textAlignment="center" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/datiResoconto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/titoloResoconto"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/datiProduzione"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_margin="5dp"
                        android:src="@drawable/icon_produzione" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/labelProduzione"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:gravity="left"
                            android:text="@string/produzione"
                            android:textColor="@color/bluet" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/button_with_corner"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/datoProduzione"
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:layout_gravity="center_vertical"
                                android:text=""
                                android:textAlignment="center"
                                android:textColor="@color/bluet" />

                            <TextView
                                android:id="@+id/datoIncentivo"
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:layout_gravity="center_vertical"
                                android:text=""
                                android:textAlignment="center"
                                android:textColor="@color/bluet" />

                            <TextView
                                android:id="@+id/datoEmissioni"
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:layout_gravity="center_vertical"
                                android:text=""
                                android:textAlignment="center"
                                android:textColor="@color/bluet" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/letturePrelievi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"

                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_margin="5dp"

                        android:src="@drawable/icon_prelievi" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/labelPrelievo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:gravity="left"
                            android:text="@string/prelievi"
                            android:textColor="@color/bluet" />

                        <TextView
                            android:id="@+id/datoPrelievo"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_below="@+id/labelPrelievo"
                            android:layout_margin="5dp"
                            android:background="@drawable/button_with_corner"
                            android:gravity="center_vertical"
                            android:text=""
                            android:textAlignment="center"
                            android:textColor="@color/bluet" />
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/lettureImmissione"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"

                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_margin="5dp"

                        android:src="@drawable/icon_immissione" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/labelImmissioni"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:gravity="left"
                            android:text="@string/immissioni"
                            android:textColor="@color/bluet" />

                        <TextView
                            android:id="@+id/datoImmissioni"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_margin="5dp"
                            android:background="@drawable/button_with_corner"
                            android:gravity="center_vertical"
                            android:text=""
                            android:textAlignment="center"
                            android:textColor="@color/bluet" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/impiegoproduzione"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/datiResoconto"
                android:layout_marginTop="5dp"
                android:background="@drawable/bordo"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="31dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:text="IMPIEGO DELLA PRODUZIONE"
                    android:textAlignment="center" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lettureAutoconsumo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/impiegoproduzione"
                android:orientation="vertical">

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/piechart1"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:padding="0dp" />

            </LinearLayout>



        </RelativeLayout>

    </ScrollView>


</android.support.constraint.ConstraintLayout>
