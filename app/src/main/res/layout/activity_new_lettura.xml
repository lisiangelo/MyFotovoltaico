<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="it.android.j940549.fotovoltaico_material_design.NewLetturaActivity">
<!--    android:background="@drawable/fotovoltaico1">-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="30dp">
                <Spinner
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/mese"
                    android:textAlignment="center"
                    android:background="@drawable/bordo_spinner"/>
                <Spinner
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textAlignment="center"
                    android:id="@+id/anno"
                    android:background="@drawable/bordo_spinner"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:orientation="vertical"
                    android:id="@+id/newLetturaProd"
                    android:gravity="center_horizontal"><!--
                    android:background="@drawable/sfodo_produzione">-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_produzione"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/produzione"
                        android:textAlignment="center"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/bluet"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal">
                        <EditText
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/f1prod"
                            android:hint="F1"
                            android:inputType="number"
                            android:textColor="@color/bluet"
                            android:textAlignment="center"/>
                        <EditText
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/f2prod"
                            android:hint="F2"
                            android:textColor="@color/bluet"
                            android:inputType="number"
                            android:textAlignment="center"/>
                        <EditText
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/f3prod"
                            android:textColor="@color/bluet"
                            android:hint="F3"
                            android:inputType="number"
                            android:textAlignment="center"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:orientation="vertical"
                    android:id="@+id/newLetturaPrel"
                    android:gravity="center_horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_prelievi"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/prelievi"
                        android:textAlignment="center"
                        android:layout_gravity="center_vertical"
                        android:textColor="@android:color/holo_red_dark"/>
                    </LinearLayout>
                        <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal">
                        <EditText
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/f1prel"
                            android:hint="F1"
                            android:textColor="@android:color/holo_red_dark"
                            android:inputType="number"
                            android:textAlignment="center"/>
                        <EditText
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/f2prel"
                            android:hint="F2"
                            android:textColor="@android:color/holo_red_dark"
                            android:inputType="number"
                            android:textAlignment="center"/>
                        <EditText
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/f3prel"
                            android:hint="F3"
                            android:textColor="@android:color/holo_red_dark"
                            android:inputType="number"
                            android:textAlignment="center"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:orientation="vertical"
                    android:id="@+id/newLetturaImmis"
                    android:gravity="center_horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_immissione"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/immissioni"
                        android:textAlignment="center"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/greendark"/>
                        </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal">
                        <EditText
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/f1immis"
                            android:hint="F1"
                            android:textColor="@color/greendark"
                            android:inputType="number"
                            android:textAlignment="center"/>
                        <EditText
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/f2immis"
                            android:hint="F2"
                            android:textColor="@color/greendark"
                            android:inputType="number"
                            android:textAlignment="center"/>
                        <EditText
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/f3immis"
                            android:hint="F3"
                            android:textColor="@color/greendark"
                            android:inputType="number"
                            android:textAlignment="center"/>
                    </LinearLayout>

                </LinearLayout>
                <Button
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"

                    android:text="Inserisci"
                    android:textAlignment="center"
                    android:background="@drawable/button_with_corner"
                    android:onClick="inserisciLetture"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
